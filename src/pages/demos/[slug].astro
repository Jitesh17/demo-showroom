---
import demos from "../../data/demos.json";

export function getStaticPaths() {
  return demos.map((demo) => ({
    params: { slug: demo.slug }
  }));
}

const { slug } = Astro.params;
const demo = demos.find((d) => d.slug === slug);

if (!demo) {
  throw new Error(`Demo not found: ${slug}`);
}
---


<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{demo.name}</title>
    <style>
      body { font-family: system-ui, sans-serif; margin: 0; padding: 24px; background: #0b0b0c; color: #f5f5f7; }
      a { color: #c9c9d1; }
      .wrap { max-width: 920px; margin: 0 auto; }
      .top { display:flex; align-items:center; justify-content:space-between; gap: 12px; margin-bottom: 18px; }
      .title { font-size: 28px; margin: 0; }
      .tagline { color: #c9c9d1; margin: 10px 0 0; }
      .card { background: #141416; border: 1px solid #232327; border-radius: 16px; padding: 16px; }
      .btn { display:inline-block; padding: 10px 14px; border-radius: 12px; background: #f5f5f7; color:#0b0b0c; text-decoration:none; font-weight: 650; }
      .btn2 { display:inline-block; padding: 10px 14px; border-radius: 12px; background: #232327; color:#f5f5f7; text-decoration:none; font-weight: 650; }
      iframe { width: 100%; aspect-ratio: 16/9; border: 0; border-radius: 12px; }
      .grid { display:grid; grid-template-columns: 1fr; gap: 14px; }
      @media (min-width: 900px) { .grid { grid-template-columns: 1.2fr 0.8fr; } }
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="top">
        <a href="/">‚Üê Back</a>
      </div>

      <h1 class="title">{demo.name}</h1>
      <p class="tagline">{demo.tagline}</p>

      <div class="grid">
        <div class="card">
          <iframe src={demo.videoUrl} allowfullscreen></iframe>
        </div>

        <div class="card">
          <p>{demo.description}</p>

          <div style="display:flex; gap: 10px; flex-wrap: wrap; margin-top: 12px;">
            <a class="btn" href={demo.demoUrl} target="_blank" rel="noreferrer">Open demo</a>

            {
              demo.runAction === "manual"
                ? <span class="btn2" title="This demo is already running or started manually">Run demo (manual)</span>
                : <button class="btn2">Run demo</button>
            }
          </div>

          <p style="color:#c9c9d1; font-size: 13px; margin-top: 12px;">
            Tip: This demo may take a few seconds to wake up. It will auto-stop after a short idle period.
          </p>


        </div>
      </div>
    </div>
  </body>
</html>
